#include <stdio.h>
#define MAX 100
typedef struct stack
{
    int top;
    int arr[MAX];
} Stack;
void push(Stack *S)
{
    if((S->top)>=MAX)
    {
        printf("STACK OVERFLOW\n");
    }
    else
    {
        int num;
        printf("ENTER ELEMENT TO PUSH:\n");
        scanf("%d",&(S->arr[S->top+1]));
        S->top=S->top+1;

    }
}
int pop(Stack *S)
{
    int temp=0;
    if(S->top<0)
    {
        printf("STACK UNDERFLOW\n");
    }
    else
    {
        temp=S->arr[S->top];
        S->top=S->top-1;
    }
    return temp;
}
void display(Stack *S)
{
    if(S->top==-1)
    {
        printf("STACK IS EMPTY\n");
    }
    else
    {
        for(int i=0;i<=S->top;i++)
        {
            printf("%d\t",S->arr[i]);
        }
    }
    printf("\n");
}
void isFull(Stack *S)
{
    if(S->top>=MAX)
    {
        printf("STACK IS FULL\n");
    }
    else
    {
        printf("STACK IS NOT FULL\n");
    }
}
void isEmpty(Stack *S)
{
    if(S->top<0)
    {
        printf("STACK IS EMPTY\n");
    }
    else
    {
        printf("STACK IS NOT EMPTY\n");
    }
}
int main()
{
    Stack s;
    s.top=-1;
    do
    {
        int ch;
        printf("ENTER 1 TO PUSH\nENTER 2 TO POP\nENTER 3 TO DISPLAY\nENTER 4 TO PEEK\nENTER 5 TO CHECK IF STACK IS FULL\nENTER 6 TO CHECK IF STACK IS EMPTY\nENTER 0 TO EXIT\n");
        printf("ENTER YOUR CHOICE:\n");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:push(&s);
                break;
            case 2:printf("POPPED ELEMENT:%d\n",pop(&s));
                break;
            case 3:display(&s);
                break;
            case 4:printf("%d\n",s.arr[s.top]);
                break;
            case 5:isFull(&s);
                break;
            case 6:isEmpty(&s);
                break;
            case 0:return 0;
                break;
            default:printf("WRONG CHOICE!");
        }
    }while(1);
    return 0;
}
